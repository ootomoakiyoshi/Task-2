<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Book</th>
    <th colspan="3"></th>
  </tr>

    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'show', book_path(book.id) %></td>
    <td><%= link_to 'edit', edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy', book_path(book),method: :delete %></td>
    </tr>
    <% end %>
</table>

<h2>New book</h2>


