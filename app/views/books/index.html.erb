<p id="notice"></p>

<h1>Books</h1>

<% @books.each do |book| %>
<p>Title</p>
<%= book.title %>
<p>Body</p>
<%= book.body %><%= link_to 'show', book_path(book.id) %>
<%= link_to 'edit', edit_book_path(book.id) %>
<%= link_to 'Destroy', book_path(book),method: :delete %>


<% end %>

<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

<h6>Title</h6>
<%= f.text_area :title%>
<h6>Body</h6>


<%= f.text_area :body %>
<p><%= f.submit 'CreateBook' %></p>

<% end %>